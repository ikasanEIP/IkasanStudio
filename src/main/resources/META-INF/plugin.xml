<idea-plugin>
    <id>com.github.ikasaneip.ikasanstudio2</id>
    <name>IkasanStudio2</name>
    <vendor email="davidhilton68@gmail.com" url="http://www.ikasan.org">Ikasan</vendor>

    <description><![CDATA[
    Ikasan Studio is an IDE tool to help Ikansan developer create and maintain new Ikasan flows.
    ]]></description>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.ikasanEIP.ikasanstudio2.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.ikasanEIP.ikasanstudio2.services.MyProjectService"/>
        <toolWindow id="Ikasan Studio"
                    anchor="right"
                    factoryClass="org.ikasan.studio.ui.DesignerToolWindowFactory"
                    icon="/studio/icons/squid13x13.svg"
        />
    </extensions>

<!--    <applicationListeners>-->
<!--        <listener class="com.github.ikasaneip.ikasanstudio2.listeners.MyProjectManagerListener"-->
<!--                  topic="com.intellij.openapi.project.ProjectManagerListener"/>-->
<!--    </applicationListeners>-->

    <actions>
        <action id="Studio.Search.Editor"
                class="org.ikasan.studio.actions.StudioMaintenanceDebug"
                text="Studio maintenance debug"
                icon="/studio/icons/squid13x13.svg"
                description="Invoke services to assist in the debugging of an issue">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <!-- Add Ask question action to Tools Menu -->
        <action id="StackOverflow.AskQuestion.ToolsMenu"
                class="shed.AskQuestionAction"
                text="Ask Question on Stack Overflow"
                icon="/studio/icons/squid13x13.svg"
                description="Ask a Question on Stack Overflow">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <!-- Add action to search Stack Overflow from file editor -->
        <action id="StackOverflow.Search.Editor"
                class="shed.SearchAction"
                text="Search on Stack Overflow"
                icon="/studio/icons/squid13x13.svg"
                description="Search on Stack Overflow">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <!-- Add action to search Stack Overflow from console editor -->
        <action id="StackOverflow.Search.Console"
                class="shed.SearchAction"
                text="Search on Stack Overflow"
                icon="/studio/icons/squid13x13.svg"
                description="Search on Stack Overflow">
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
